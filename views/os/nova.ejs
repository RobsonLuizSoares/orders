<% include ../partials/header %>

<div class='container text-center my-5'>
    <h1> Abrir Nova Comanda</h1>
</div>
<div class='container my-3' >
    <a href='/os/list'><button type='button' class='btn btn-primary' style='width: 7rem;'> Voltar </button></a>    
</div>

<div class='container'>
    <div class='card formNova'>
        <div class='card-body'>
                <form method='post' action='' >
                    <div class='form-group' >
                        <label for="client">Cliente</label>
                        <input class='form-control' type='text' id='client' name='client'>
                        <div class="form-group">
                            <label class='mt-3 mb-2' for="status">Status</label>
                            <select  class="form-control" id="status" name='status'>
                                <option value='aberta'>Aberta</option>
                                <option value='executando'>Executando</option>
                                <option value='fechada'>Fechada</option>
                            </select>
                        </div>
                        <label class='mt-3 mb-2' for="comentário">Descrição:</label>
                        <textarea class='form-control' name='comments' rows="2" cols="">
                        </textarea>
                        <button class='btn btn-primary mt-3' style='width: 7rem;'>Salvar</button>
                    </div> 
                </form>
        </div>
    </div>    
</div>

<% include ../partials/footer %>