<% include ../partials/header %>

<div class='container text-center namePage'>
    <h1> Consultar Comandas </h1>
</div>
<div class='container text-center my-4'>
    <a href='/os/nova'><button type='button' class='btn btn-outline-primary btn-sm ' style='width: 12rem;'> Cadastrar Nova Comanda</button></a>
</div>
<% if(order.length == 0) { %>
    <% include ../partials/errorMsg %>
<% } %>

<% order.forEach( os => { %> 
    <div class="container comanda ">
        <div class="card mx-auto">
            <div class="card-header cardHeader formNova">
                <div>
                    <h5 class="text-center">Comanda de Serviços Net Link</h5> 
                </div>
            </div>
            <div class='card-body cardBody formNova '>
            <div class='card cardContent'>
                <div class="row mt-3 ">
                    <div class="col-md-6 field">
                        <span class="font-weight-normal ">Cliente:&nbsp; <%= os.client %></span>
                    </div>
                    <div class="col-md-3 field">
                        <span class="font-weight-normal ">Telefone:&nbsp; <%= os.phone %></span>
                    </div>
                    <div class="col-md-2 field">
                        <span class="font-weight-bold" style="font-size: 1.1em;" >Comanda n.:&nbsp; <%= os.number %></span> 
                    </div>
                 </div> 
                 <br />
                <div class="row">
                    <div class="col-md-3 field">
                        <span class="font-weight-normal">Cópias:&nbsp; <%= os.copy %></span>
                    </div>
                    <div class="col-md-2 field">
                        <span class="font-weight-normal ">Quantidade:&nbsp; <%= os.copyQ %></span>
                    </div>
                    <div class="col-md-3 field">
                        <span class="font-weight-normal" >Folhas:&nbsp; <%= os.sheets %></span> 
                    </div>
                    <div class="col-md-2 field">
                        <span class="font-weight-normal">Tamanho:&nbsp; <%= os.size %></span>
                    </div>
                </div>
                <hr />
                <% if(os.otherServices === '') { %> 
                  
                  
                <div class="row">
                    <div class="col-md-7 field">
                        <span class="font-weight-normal">Outros Serviços:&nbsp; <%= os.otherServices %></span>
                    </div>
                    <div class="col-md-4 field">
                        <span class="font-weight-normal" >Cor:&nbsp; <%= os.color %></span> 
                    </div>
                </div>
                <hr /> 
                <% } %>   
                 <div class="row" >
                    <h6 class="mx-auto">Descrição do Serviço:</h6>        
                </div>           
                <div class="row">
                    <div class= ' fieldComments'>
                        <span class="font-weight-normal">Tamanho:&nbsp; <%= os.comments %></span>
                    </div>
                </div>
                <hr />
                <div class="row ">
                    <% if(os.delivery) { %> 
                    <div class="col-md-4 fieldDate">
                        <span class="font-weight-normal " >Comanda fechada em:&nbsp; <%= moment(os.delivery).add(1,'days').format("DD [/] MM [/] YYYY") %></span>
                    </div> 
                    <% } %>
                    <div class="col-md-4 fieldDate">
                        <span class="font-weight-normal " >Registrada em: <%= moment(os.register).format("DD [/] MM [/] YYYY") %>&nbsp; por: <%= locals.user.username %></span> 
                    </div>
                    
                    <div class="col-md-3 fieldBox">
                        <span class="font-weight-normal">Guichê:&nbsp; <%= os.box %></span>
                    </div> 
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-2 fieldCash">
                        <span class="font-weight-normal">Total:&nbsp; R$ <%= os.valueJobTotal %></span>
                    </div>
                    <div class="col-md-3 fieldCash">
                        <span class="font-weight-normal">Entrada:&nbsp; R$ <%= os.valueJobInit %></span>
                    </div>
                    <div class="col-md-3 fieldCash">
                        <span class="font-weight-normal">Pagamento:&nbsp; <%= os.isSold %></span>
                    </div>
                    <div class="col-md-3 fieldStatus">
                        <span class="font-weight-normal ">Status:&nbsp;&nbsp;<strong> <%= os.status %></strong></span>
                    </div>
                </div>
                <div class= 'btns mx-auto'> 
                    <a href='/os/editar/<%= os._id %>'><button type="button" class="btn btnComanda btn-primary btn-sm mr-2">Editar</button></a>
                    <a href='/os/excluir/<%= os._id %>'><button type="button" class="btn btnComanda btn-secondary btn-sm "> Excluir</button></a>
                </div>
            </div>
            </div>            
        </div>
    </div>
<% }) %>

<% include ../partials/footer %>