<% include ../partials/restrict-header %>
<div class="container user py-4" >
    <div class="alert text-center bg-danger my-4">
        <h1 class="mt-4 text-white"> CADASTRO DE USUÁRIO </h1>
    </div>
        <hr />
    <div class="container text-center my-5 ">
        <h3>CADASTRAR USUÁRIO </h3>
    </div>
    <div class="card">
        <div class="card-body py-5"  >
            <div class="card-body pb-5 mx-auto col-md-8" style= "border-radius: 8px; background-color: #f0f0f0"> 
                <form method="POST" action="/restrict/novousuario">
                    <div class="form-group mx-auto col-md-10">                            
                        <h6><label class="" for="name">Usuário: </label></h6>
                        <input type="text" class="form-control" id="username" name='username'  placeholder="Digite o Nome do Usuário" >
                        <h6><label class="mt-3 " for="name">Senha: </label></h6>
                        <input type="password" class="form-control" id="password" name='password' placeholder="Digite uma senha para o usuário">
                        <h6><label class="mt-3 " for="name">Perfil: </label></h6>
                        <select  class="form-control" id="roles" name='roles'>
                            <option value="admin"> Funcionária</option>
                            <option value="restrict"> Administração </option>
                          
                        </select>
                    </div>
                    <button type="submit" class="btn ml-5 mt-3 btn-primary">Criar usuário</button>
                    <a href="/admin"> <button type="button" class="btn ml-3 mt-3 btn-secondary">Voltar</button></a>
                </form>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %> 