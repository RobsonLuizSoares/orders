<% include ../../partials/restrict-header %>
<div class='container'>
<h3 class='text-center alert alert-primary my-5'> USUÁRIAS </h3>
</div>
<div class='container my-4'>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr class="table-secondary text-center">
          <th scope="col">Nome</th>
          <th scope="col">Nome de Usuária</th>
          <th scope="col">Excluir</th>
          <th scope="col">Editar</th>
        </tr>
      </thead>
      <tbody>
      <% users.forEach(user => { %>
        <tr class='table-info text-center'>
        <th><%= user.user %></th>
        <th scope="row"><%= user.username %></th>
        <td><a href='/restrict/users/excluir/<%= user._id %>'><btn class='btn btn-danger'>Excluir</btn></a></td>
        <td><a href='/restrict/users/editar/<%= user._id %>'><btn class='btn btn-info'>Editar</btn></a></td>  
        </tr>
      </tbody>
      <% }) %>
    </table>
  </div>


  <div class='my-4'>
    <a href='/restrict/novousuario'><button class="btn btn-primary mr-2">Cadastrar Usuária</button></a>
    <a href='/restrict/gerenciamento'><button class="btn btn-secondary">Voltar</button></a>
  </div>

</div>
<% include ../../partials/footer %></div>